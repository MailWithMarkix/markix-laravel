{
    "name": "markix/markix-laravel",
    "description": "Markix for Laravel",
    "keywords": ["php", "markix", "laravel", "sdk", "api", "client"],
    "homepage": "https://www.markix.com/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Markix and contributors",
            "homepage": "https://github.com/MailWithMarkix/markix-php/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.21|^10.0",
        "markix/markix-php": "*",
        "symfony/mailer": "^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^7.22|^8.0",
        "pestphp/pest": "^1.22"
    },
    "autoload": {
        "psr-4": {
            "Markix\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Markix\\Laravel\\Tests\\": "tests/"
        }
    },
    "repositories": [{
        "type": "path",
        "url": "../markix-php"
    }],
    "extra": {
        "laravel": {
            "providers": [
                "Markix\\Laravel\\MarkixServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
